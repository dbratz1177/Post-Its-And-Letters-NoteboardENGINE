<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Noteboard</th>
      <th>Poster</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.noteboard_id %></td>
        <td><%= (User.find(note.poster_id)).username %></td>
        <td><%= note.message %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

